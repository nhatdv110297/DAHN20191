<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundHome"
    android:orientation="vertical"
    tools:context=".AddOrUpdateRoomActivity"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/bt_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back"
            android:background="@android:color/transparent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/title_add_or_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add or update room"
            android:textColor="@color/colorBlack"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/icon_room"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/armchair"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"/>

    <EditText
        android:id="@+id/edt_name_room"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Name room"
        android:layout_marginTop="40dp"
        android:paddingLeft="20dp"
        android:background="@drawable/background_edt_login"/>

    <EditText
        android:id="@+id/edt_code_esp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Code ESP"
        android:layout_marginTop="20dp"
        android:paddingLeft="20dp"
        android:background="@drawable/background_edt_login"/>

    <Button
        android:id="@+id/bt_add_or_update"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:text="Add or update"
        android:textColor="@color/colorWhite"
        android:textAllCaps="false"
        android:background="@drawable/conner2_gradient_180"/>

</LinearLayout>